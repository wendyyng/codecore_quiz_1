<%- include('./partials/header') %>
<div class="container">
 
<div class="left trending">
  <div class="wireframe card" id="trending">
    <h1 id="trending-title">Trending Clucks</h1>
    <% if(trends){%>  
      <ul>
        <%for(let each of trends){%>  
          <li><%- each.trend %> · <%- each.counter %></li> 
          <% } %>  
      </ul>
      <% }else{  %> 
        <h2>Nothing is trending...</h2> 
        <% } %>
    </div>

</div>

<div class="right clucks">
<div class="cards">
  <% let currentTime = new Date()%>
  <% for(let cluck of clucks) { %>
    <div class="wireframe card">
      <div>
      <img class="rounded" id="rooster-avatar" src="images/rooster.jpg"
      data-holder-rendered="true">
      </div>
      <div>
        <p><b><%- cluck.username %></b> · <%- relativeDate(currentTime, cluck.createdAt) %></p>
        <p><%- cluck.content %></p>
      <% if(cluck.image_url){%>
        <img class="cluck-image" src="<%- cluck.image_url %>" alt="todo img">
        <% }%>
      </div>
    </div>
 <% } %>
</div>
</div>
</div>
<%- include('./partials/footer') %>